{
  "name": "back3nd",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "api": "bun run --hot packages/api/main.ts",
    "studio": "bun run packages/studio",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prisma:generate": "bunx prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate:dev": "bunx prisma migrate dev --schema=./prisma/schema.prisma",
    "prisma:migrate:prod": "bunx prisma migrate deploy --schema=./prisma/schema.prisma",
    "prisma:studio": "bunx prisma studio",
    "prisma:push": "bunx prisma db push",
    "prisma:reset": "bunx prisma migrate reset --force",
    "prisma:seed": "bun run prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.21.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.3",
    "@types/bun": "latest",
    "prisma": "^5.21.0"
  }
}
